<UserControl x:Class="VSAsm.EditorWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             x:Name="VSAsmWindow">
    <Grid x:Name="AsmGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="AsmStatus" Content="No source file." VerticalAlignment="Top"/>
        <Button x:Name="AsmCompile" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Compile" Margin="0,5" Grid.Row="1" Padding="5" Click="AsmCompile_Click"/>
        <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="AsmText" Margin="0"  Padding="5" FontFamily="Consolas" ScrollViewer.CanContentScroll="True" BorderBrush="{x:Null}" BorderThickness="0" IsReadOnly="True"></TextBox>
        </ScrollViewer>
    </Grid>
</UserControl>
